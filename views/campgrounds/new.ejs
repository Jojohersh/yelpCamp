<%- include("../partials/header") %>

  <div class="container">

    <div class="row">
      <h1 class="text-center">Create a new campground</h1>
      <div style="width: 38%; margin: 30px auto;">
        <form class="" action="/campgrounds" method="POST">
          <div class="form-group">
            <input class="form-control" type="text" name="name" value="" placeholder="Name">
          </div>
          <div class="form-group">
            <input class="form-control" type="text" name="image" value="" placeholder="Image URL">
          </div>
          <div class="form-group">
            <input class="form-control" type="number" name="price" value="" placeholder="Price per night" min="0.01" step="0.01">
          </div>
          <div class="form-group">
            <input class="form-control" type="text" name="description" value="" placeholder="Describe the campground">
          </div>
          <div class="form-group">
          <button class="btn btn-lg btn-primary btn-block">Submit!</button>
          </div>
        </form>
        <a href="/campgrounds">Go Back</a>
      </div>
  </div>
<%- include("../partials/footer") %>
